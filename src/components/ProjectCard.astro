---
const { projectData } = Astro.props;
---

<article>
  <picture>
    <source srcset={projectData.imageUrl.large} media="(min-width: 600px)" />
    <img src={projectData.imageUrl.small} alt={projectData.title} />
  </picture>
  <section>
    <h3>{projectData.title}</h3>
    <div class="langs">
      {projectData.languages.map((language) => <span>{language}</span>)}
    </div>
  </section>
  <aside class="links">
    <a href={projectData.projectUrl} class="button-style">View project</a>
    <a href={projectData.sourceUrl} class="button-style">View source</a>
  </aside>
</article>

<style>
  article {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 7px;
  }

  h3 {
    text-transform: uppercase;
  }

  .langs {
    display: flex;
    gap: 18px;
  }

  .links {
    display: flex;
    gap: 32px;
  }

  span {
    font-size: var(--fs-300);
    line-height: var(--lh-400);
    color: var(--clr-primary-200);
  }

  @media (min-width: 1440px) {
    article {
      --display-links: none;
    }
    article:hover {
      --display-links: flex;
    }

    picture {
      height: 400px;
      overflow-y: hidden;
    }

    .links {
      position: absolute;
      width: 100%;
      height: 400px;
      top: 0;
      left: 0;
      background-color: var(--clr-primary-800-op75);
      display: var(--display-links);
      justify-content: center;
      align-items: center;
    }
  }
</style>
