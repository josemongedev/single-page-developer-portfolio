---
import SectionLayout from "../layouts/SectionLayout.astro";
import ProjectCard from "./ProjectCard.astro";
const projects = await Astro.glob("../pages/projects/*.md");
---

<SectionLayout>
  <section>
    <header>
      <h1>Projects</h1>
      <a href="#contact" class="button-style"> Contact me</a>
    </header>
    <article>
      {
        projects.map((project) => (
          <ProjectCard projectData={project.frontmatter} />
        ))
      }
    </article>
  </section>
</SectionLayout>

<style>
  section {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    margin-block: 80px;
  }

  header {
    width: 100%;
    display: flex;
    justify-content: space-between;
  }

  article {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  @media (min-width: 768px) {
    section {
      margin-top: 60px;
      margin-bottom: 100px;
    }
    article {
      row-gap: 60px;
      column-gap: 20px;
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 1440px) {
    section {
      margin-top: 80px;
      margin-bottom: 139px;
    }
    article {
      row-gap: 69px;
      column-gap: 26.83px;
    }
  }
</style>
